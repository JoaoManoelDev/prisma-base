generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Teachers {
  id   String @id @default(uuid())
  name String @unique

  courses Courses?
}

model Courses {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  duration    Int
  created_at  DateTime @default(now())
  teachers_id String   @unique

  teacher        Teachers         @relation(fields: [teachers_id], references: [id])
  coursesModules CoursesModules[]

  @@map("courses")
}

model Modules {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  created_at  DateTime @default(now())

  coursesModules CoursesModules[]

  @@map("modules")
}

model CoursesModules {
  id String @id @default(uuid())

  course_id String
  module_id String

  course Courses @relation(fields: [course_id], references: [id])
  module Modules @relation(fields: [module_id], references: [id])

  created_at DateTime @default(now())

  @@map("courses_modules")
}

model Authors {
  id   String @id @default(uuid())
  name String @unique

  books Books[]

  @@map("authors")
}

model Books {
  id        String @id @default(uuid())
  name      String @unique
  author_id String

  author Authors @relation(fields: [author_id], references: [id])

  @@map("books")
}
